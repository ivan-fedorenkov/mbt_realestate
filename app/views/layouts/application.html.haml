!!! 5
%html{:lang => 'ru'}
  %head
    %meta{:charset => 'utf-8'}
    %title MBT Real Estate
    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script><![endif]-->
    = stylesheet_link_tag    "application"
    
    
    = csrf_meta_tags
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
  
  %body
    .container
      .row
        .span4
          %a{:href => root_path}
            = image_tag 'logo.jpg'
        .span4.pull-right.text-right
          %br/
          %br/
          %br/
          %h4 
            Customer service: 
            = mail_to MbtRealestate::Application.config.admin_email, nil, :encode => "javascript"
      
      .row#navigation-panel
        .span12= render 'navbar'

      .row
        #notifications.span12
          = display_flash_messages(flash)
          
      .row
        #content.span12= yield
        
    = yield(:additional_js) 
    = javascript_include_tag "application"
    = render_yandex_metric
