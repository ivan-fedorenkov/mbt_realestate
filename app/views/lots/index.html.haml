.row
  .span3.well.lform
    = form_for @lot_search_form, :url => search_lots_path, :method => :get, :html => {:class => 'form-inline', :id => 'lots-search-form'} do |f|
      = field_set_tag do
        .row
          .span3
            .control-group
              = f.label :type, "I want to"
              .controls
                = f.select :type, options_for_select([["Find a residential","Residential"],["Invest money in something","Investment"],["Buy a plot or land","Plot"]])
        .row
          .span3
            .control-group
              = f.label :location_id, "In the following location"
              .controls
                = f.select :location_id, options_for_select(@lot_search_form.locations), {}, :class => 'span2 focused'

        .row
          .span3
            = f.label :price_from, "For the following price"
        .row
          .span1
            .control-group
              .controls
                = f.select :price_from, options_for_select([["Min",0],[1000],[1500],[2000],[2500],[3000],[4000],[5000]], 0), {}, :class => 'span1 focused'
          .span1
            .control-group
              .controls
                = f.select :price_to, options_for_select([[1000],[2000],[2500],[3000],[4000],[5000],['Max','']],''), {}, :class => 'span1 focused'

        .row
          .span3.pull-right{:style => 'margin-top: 10px;'}
            = f.submit "Go", :class => 'btn btn-primary pull-right'

  .span8.home_carousel.no_margin_left.pull-right
    <img src='http://images.shoptopia.com/files/mf_photo/board_game.jpg' />

    
%ol
  - @lots.each do |lot|
    %li= link_to "#{lot.title} (#{lot.type})", lot_path(lot)