  .span8
    = display_header :normal => "Featured", :bolded => "lots"

    %table.table.table-bordered.table-striped
      %thead
        %tr
          %th Title
          %th Type
          %th Location
          %th Price
          %th &nbsp;
      %tbody
        - @lots.each do |lot|
          %tr
            %td= link_to lot.title, lot_path(lot)
            %td= lot.type
            %td= lot.location.name
            %td= display_price(lot.price)
            %td= link_to "View", lot_path(lot)
