.row
  .span4.well.lform
    = form_tag search_lots_path, :class => 'form-inline', :id => 'residential-search-form' do
      = field_set_tag do
        .row
          .span4
            .control-group
              = label_tag :type, "I want to"
              .controls
                = select_tag :type, options_for_select([["find a residential","Residential"],["invest money in something","Investment"],["buy a plot or land","Plot"]])
        .row
          .span4
            .control-group
              = label_tag :location_id, "In the following location"
              .controls
                = select_tag :location_id, options_for_select(@residential_search_form.locations), :class => 'span2 focused'

        .row
          .span2
            .control-group
              = label_tag :price_from, "For the price from"
              .controls
                = select_tag :price_from, options_for_select([[0,0],[1000,1000],[1500,1500],[2000,2000],[3000,3000],[4000,4000],[5000,5000]], 0), :class => 'span2 focused'
          .span2
            .control-group
              = label_tag :price_to, "up to"
              .controls
                = select_tag :price_to, options_for_select([[1000,1000],[2000,2000],[3000,3000],[4000,4000],[5000,5000],['No limit','']], ''), :class => 'span2 focused'

        .row
          .span2.pull-right{:style => 'margin-top: 10px;'}
            = submit_tag "Go", :class => 'btn btn-primary pull-right'
    
%ol
  - @lots.each do |lot|
    %li= link_to "#{lot.title} (#{lot.type})", lot_path(lot)