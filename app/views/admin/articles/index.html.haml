.row
  .span12
    .pull-right
      = link_to "New Article", new_admin_article_path, :class => 'btn btn-primary'

.row
  .span12
    %ol
      - @articles.each do |article|
        %li
          = link_to article.title, admin_article_path(article)
          = link_to "Edit", edit_admin_article_path(article)
          = link_to "Delete", admin_article_path(article), :method => :delete, :confirm => "Are you sure?"
        
